{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-import-helpers",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "singleQuote": true,
        // "no-console": "off",
        "no-plusplus": "off",
        "camelcase": "off",
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off",
        "no-case-declarations": "off",
        /*"import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]*/
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}